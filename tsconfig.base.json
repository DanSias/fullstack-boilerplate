{
  "compilerOptions": {
    "target": "ES2020", // Supports modern JavaScript features
    "module": "ESNext", // Use ES modules
    "moduleResolution": "Node", // Resolve modules like Node.js
    "strict": true, // Enable all strict type-checking options
    "esModuleInterop": true, // Allows interoperability with CommonJS modules
    "skipLibCheck": true, // Skip type checking for libraries to speed up compilation
    "forceConsistentCasingInFileNames": true, // Enforce consistent casing in imports
    "resolveJsonModule": true, // Enable importing JSON files
    "allowSyntheticDefaultImports": true, // Support default imports from modules with no default export
    "types": ["node", "jest"] // Include Node.js and Jest type definitions
  }
}
